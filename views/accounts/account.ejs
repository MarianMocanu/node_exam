<%- include ('../header/header.ejs') %>

<script src='/editAccount.js'></script>

<div class='center'>
  <h3></h3>
  <form class='pure-form pure-form-aligned' name='editAccount' action='/accounts/<%- id %>' method='POST'>
    <table class='pure-table pure-table-bordered'>
      <thead>
        <tr>
          <th>Username</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>CPR</th>
          <th>E-mail</th>
        </tr>
      </thead>
      <tbody>
        <td><input type='text' name='username' placeholder='Username' /> </td>
        <td><input type='text' name='firstname' placeholder='First Name' /></td>
        <td><input type='text' name='lastname' placeholder='Last Name' /></td>
        <td><input type='text' name='cpr' placeholder='CPR' /></td>
        <td><input type='email' name='email' placeholder='Email' /></td>
      </tbody>
    </table>
    <button type='submit' class='button-success pure-button'>Update</button>
  </form>
</div>


<%- include ('../footer/footer.ejs') %>